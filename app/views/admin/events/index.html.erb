<div class="landing-hero">
  
  <h1>Events</h1>

  <%= link_to "New Event", new_admin_event_path, class: "btn-primary" %>

  <div class="upload-section">
    <table>
      <thead>
        <tr>
          <th>Title</th>
          <th>Start Date</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @events.each do |event| %>
          <tr>
            <td><%= event.title %></td>
            <td><%= event.start_date %></td>
            <td>
              <%= link_to "Edit", edit_admin_event_path(event), class: "btn-primary" %>
              <%= link_to "View", event_path(event), class: "btn-primary" %>
              <%= link_to 'QR', generate_qr_admin_event_path(event), target: '_blank', class: 'btn btn-primary' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
