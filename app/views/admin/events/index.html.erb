<div class="admin-events-container">
  <h1>Manage Events</h1>

  <%= link_to "Create New Event", new_admin_event_path, class: "btn btn-primary" %>

  <table class="table">
    <thead>
      <tr>
        <th>Title</th>
        <th>Start Date</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @events.each do |event| %>
        <tr>
          <td><%= event.title %></td>
          <td><%= event.start_date %></td>
          <td>
            <%= link_to "Edit", edit_admin_event_path(event), class: "btn btn-sm btn-warning" %>
            <%= link_to "View", event_path(event), class: "btn btn-sm btn-info" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
